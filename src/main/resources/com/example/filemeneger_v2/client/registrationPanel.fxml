<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16"
      fx:controller="com.example.filemeneger_v2.client.RegistrationPanelController" spacing="5">
    <VBox alignment="CENTER">
        <Text fx:id="topText" text="Для регистрации заполните поля ниже" textAlignment="CENTER"/>
        <padding>
            <Insets bottom="10" />
        </padding>
    </VBox>
    <TextField fx:id="regLastNameField" promptText="Фамилия" prefHeight="30"/>
    <TextField fx:id="regNameField" promptText="Имя" prefHeight="30"/>
    <TextField fx:id="regEmailField" promptText="email" prefHeight="30"/>
    <TextField fx:id="regLoginField" promptText="Логин" prefHeight="30"/>
    <PasswordField fx:id="regPasswordField" promptText="Пароль" prefHeight="30"/>
    <PasswordField fx:id="regConfirmPasswordField" onAction="#registration" promptText="Подтверждение пароля" prefHeight="30"/>
    <padding>
        <Insets left="5.0" right="5.0"/>
    </padding>
    <VBox spacing="5" alignment="CENTER">
        <Button fx:id="regRegisterButton" prefWidth="200" mnemonicParsing="false" onAction="#registration" text="Зарегистрироваться" prefHeight="30"/>
        <Button fx:id="regCloseButton" prefWidth="200" mnemonicParsing="false" onAction="#back" text="Назад" prefHeight="30"/>
        <padding>
            <Insets top="15.0"/>
        </padding>
    </VBox>
</VBox>
