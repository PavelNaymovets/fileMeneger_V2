<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.filemeneger_v2.HelloController">
    <HBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
        <VBox HBox.hgrow="ALWAYS">
            <Text text="Клиент: "/>
            <fx:include fx:id="leftPanel" source="panel.fxml" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
        </VBox>
        <VBox alignment="CENTER" HBox.hgrow="ALWAYS" spacing="5">
            <Button maxWidth="Infinity" HBox.hgrow="ALWAYS" text='загрузить'/>
            <Button maxWidth="Infinity" HBox.hgrow="ALWAYS" text='скачать'/>
            <padding>
                <Insets bottom="5.0" />
            </padding>
        </VBox>
        <VBox HBox.hgrow="ALWAYS">
            <Text text="Сервер: "/>
            <fx:include fx:id="rightPanel" source="panel.fxml" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
        </VBox>
    </HBox>

    <HBox alignment="TOP_CENTER" spacing="5">
        <Button maxWidth="Infinity" text="Копировать файл" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Переместить файл" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Удалить файл" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" onAction="#btnExitAction" text="Выход из программы" HBox.hgrow="ALWAYS" />
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>
</VBox>
